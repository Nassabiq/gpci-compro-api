APP_NAME=gpci-compro-api
APP_ENV=production
APP_PORT=8080
APP_READ_TIMEOUT=10s
APP_WRITE_TIMEOUT=15s
APP_IDLE_TIMEOUT=60s


# Postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=gpci
DB_PASSWORD=gpci_pass
DB_NAME=gpci_db
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=30m


# Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=


# Asynq (queue)
ASYNQ_CONCURRENCY=10
ASYNQ_QUEUE_DEFAULT=default
ASYNQ_QUEUE_CRITICAL=critical


# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10s

JWT_SECRET=gpci-compro-token-jwt
JWT_EXPIRES=15m
REFRESH_EXPIRES=168h

# MinIO / Object Storage
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=uploads
STORAGE_REGION=
STORAGE_USE_SSL=false
STORAGE_BASE_PATH=uploads
